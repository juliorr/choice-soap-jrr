	"item": [
		{
			"name": "Get Hotel Sucess",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var xmlTree = xml2Json(responseBody);",
							"var hotel = xmlTree[\"SOAP-ENV:Envelope\"][\"SOAP-ENV:Body\"][\"ns2:getHotelResponse\"][\"ns2:hotel\"];",
							"console.log(hotel);",
							"",
							"pm.test(\"Status code is 200\", () => {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Verify the HotelData\", function () { ",
							"    pm.expect(hotel[\"ns2:id\"]).not.be.empty",
							"    pm.expect(hotel[\"ns2:name\"]).not.be.empty;",
							"    pm.expect(hotel[\"ns2:address\"]).not.be.empty ",
							"     ",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "text/xml",
						"type": "text"
					},
					{
						"key": "SOAPAction",
						"value": "\"#POST\"",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\"\n                  xmlns:gs=\"http://localhost:8081\">\n    <soapenv:Header/>\n    <soapenv:Body>\n        <gs:getHotelRequest>\n            <gs:name>Fiesta</gs:name>\n        </gs:getHotelRequest>\n    </soapenv:Body>\n</soapenv:Envelope>",
					"options": {
						"raw": {
							"language": "xml"
						}
					}
				},
				"url": {
					"raw": "http://localhost:8081/ws",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8081",
					"path": [
						"ws"
					]
				}
			},
			"response": []
		},
